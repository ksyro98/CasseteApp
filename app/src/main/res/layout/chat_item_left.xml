<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp">


<RelativeLayout
        android:layout_width="200dp"
        android:id="@+id/inner_relativelayoutchat"
        android:layout_height="wrap_content"
        >

    <ImageView
            android:id="@+id/profile_image_chat_activity"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_left_element"
            android:text="Hello"
            android:layout_toRightOf="@id/profile_image_chat_activity"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/chat_item_textView_bubble"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:id="@+id/message_seen_text"
            android:layout_toEndOf="@id/profile_image_chat_activity"
            android:layout_below="@id/chat_item_textView_bubble"
            android:visibility="gone"/>




</RelativeLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timestamptextviewchat"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="Hello"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            />
</RelativeLayout>